{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6", "dom"],                     
    "allowJs": true,
    "outDir": "build",    
    "jsx": "react",                      
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  }
}
